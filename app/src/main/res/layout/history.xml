<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginVertical="6dp"
        android:layout_marginEnd="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/h_loc"
                style="@style/viewParent.headerText.NoMode"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="5dp"
                android:text="Waste location: "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/h_addr"
                style="@style/modifiedEditText"
                android:layout_below="@id/h_loc"
                android:layout_alignParentLeft="true"
                android:hint="mumbai"
                android:textSize="12sp" />

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_below="@+id/h_addr"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="Waste Category: "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/h_category"
                style="@style/modifiedEditText"
                android:layout_below="@id/h_addr"
                android:layout_marginStart="95dp"
                android:layout_marginTop="10dp"
                android:hint="not known"
                android:textSize="12sp" />

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_below="@+id/h_category"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="Branch Name: "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hmu_name"
                style="@style/modifiedEditText"
                android:layout_below="@id/h_category"
                android:layout_marginStart="85dp"
                android:layout_marginTop="10dp"
                android:hint="borivali"
                android:textSize="12sp" />

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_below="@+id/hmu_name"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="Municipal Email: "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hmu_email"
                style="@style/modifiedEditText"
                android:layout_below="@id/hmu_name"
                android:layout_marginStart="95dp"
                android:layout_marginTop="10dp"
                android:hint="borivali@gov.in"
                android:textSize="12sp" />

            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_below="@+id/hmu_email"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="User Email: "
                android:textSize="12sp" />

            <TextView
                android:id="@+id/h_email"
                style="@style/modifiedEditText"
                android:layout_below="@id/hmu_email"
                android:layout_marginStart="68dp"
                android:layout_marginTop="10dp"
                android:hint="nia@gmail.com"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/hre_date"
                style="@style/viewParent.headerText.NoMode"
                android:layout_below="@+id/h_email"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:hint="3/09/2022"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/hre_time"
                style="@style/viewParent.headerText.NoMode"
                android:layout_below="@+id/h_email"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:hint="15:00:00 PM"
                android:textSize="15sp" />


        </RelativeLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>