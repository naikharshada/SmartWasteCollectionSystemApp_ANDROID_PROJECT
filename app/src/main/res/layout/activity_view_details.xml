<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/register_bk_color"
    android:gravity="center"
    tools:context=".ui.authority.viewDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="197dp">

                <TextView
                    style="@style/viewParent.headerText.NoMode"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="20sp"
                    android:text="Details page!"
                    android:textColor="@color/whiteTextColor" />

                <ImageView
                    android:layout_width="188dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="9dp"
                    android:layout_marginRight="21dp"
                    android:layout_marginBottom="0dp"
                    android:src="@drawable/white_p_logo" />
            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/whiteTextColor"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">



                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            style="@style/viewParent.headerText.NoMode"
                            android:layout_alignParentLeft="true"
                            android:text="waste picture: "
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/garbage_pic"
                            android:layout_width="220dp"
                            android:layout_height="178dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="80dp"
                            android:src="@drawable/ic_launcher_background" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            style="@style/viewParent.headerText"
                            android:layout_alignParentLeft="true"
                            android:text="Waste location: "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/address1"
                            style="@style/modifiedEditText"
                            android:layout_alignParentLeft="true"
                            android:layout_marginStart="90dp"
                            android:hint="mumbai"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            style="@style/viewParent.headerText"
                            android:layout_alignParentLeft="true"
                            android:text="Waste Category: "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/Category"
                            style="@style/modifiedEditText"
                            android:layout_marginStart="95dp"
                            android:hint="category"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            style="@style/viewParent.headerText"
                            android:layout_alignParentLeft="true"
                            android:text="User Email Id: "
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/detail_Id"
                            style="@style/modifiedEditText"
                            android:layout_marginStart="80dp"
                            android:hint="naikharshada2002@gmail.com"
                            android:textSize="12sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp">

                        <TextView
                            style="@style/viewParent.headerText"
                            android:layout_alignParentLeft="true"
                            android:text="User Phone number: (+91) "
                            android:textSize="12sp" />


                        <TextView
                            android:id="@+id/detail_phone"
                            style="@style/modifiedEditText"
                            android:layout_marginStart="145dp"
                            android:hint="123456785"
                            android:textSize="12sp"
                            app:prefixText="+91" />
                    </RelativeLayout>

                    <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                        android:id="@+id/cirAcceptButton"
                        style="@style/loginButton"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="50dp"
                        android:text="Accept Request"
                        app:initialCornerAngle="27dp"
                        app:spinning_bar_color="#FFF"
                        app:spinning_bar_padding="6dp"
                        app:spinning_bar_width="4dp" />





                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:weightSum="12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:gravity="center" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/back_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="20dp"
        android:adjustViewBounds="false"
        android:src="@drawable/ic_back_img" />

</RelativeLayout>

