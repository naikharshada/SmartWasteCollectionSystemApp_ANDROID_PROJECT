<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginVertical="6dp"
        android:layout_marginEnd="7dp"
        android:orientation="vertical">

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_width="118dp"
                android:layout_marginTop="5dp"
                android:layout_height="135dp"
                tools:srcCompat="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/text_loc"
                style="@style/viewParent.headerText.NoMode"
                android:layout_alignParentLeft="true"
                android:text="Waste location: "
                android:layout_marginTop="5dp"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/addr"
                style="@style/modifiedEditText"
                android:layout_below="@+id/text_loc"
                android:layout_alignParentLeft="true"
                android:layout_marginEnd="108dp"
                android:hint="mumbai"
                android:textSize="12sp" />


            <TextView
                style="@style/viewParent.headerText.NoMode"
                android:layout_below="@+id/addr"
                android:layout_marginTop="10dp"
                android:layout_alignParentLeft="true"
                android:text="Waste Category: "
                android:textSize="12sp" />


            <TextView
                android:id="@+id/waste_category"
                style="@style/modifiedEditText"
                android:layout_below="@id/addr"
                android:layout_marginStart="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="108dp"
                android:hint="not known"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_id"
                style="@style/viewParent.headerText"
                android:layout_below="@+id/waste_category"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="User Email-Id: "
                android:textSize="12sp" />


            <TextView
                android:id="@+id/user_Id"
                style="@style/modifiedEditText"
                android:layout_below="@+id/text_id"
                android:layout_marginEnd="108dp"
                android:hint="naikharshada2002@gmail.com"
                android:textSize="12sp" />

            <TextView
                style="@style/viewParent.headerText"
                android:layout_below="@id/user_Id"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="10dp"
                android:text="User Phone no. : (+91) "
                android:textSize="12sp" />


            <TextView
                android:id="@+id/user_phone"
                style="@style/modifiedEditText"
                android:layout_below="@+id/user_Id"
                android:layout_marginStart="115dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="108dp"
                android:hint="123456785"
                android:textSize="12sp" />

            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/cirAcceptButton"
                style="@style/loginButton"
                android:layout_width="145dp"
                android:layout_height="32dp"
                android:layout_below="@+id/user_phone"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:text="Accept Request"
                app:initialCornerAngle="27dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp" />


            <ImageView
                android:id="@+id/delete_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_phone"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_delete" />


        </RelativeLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>